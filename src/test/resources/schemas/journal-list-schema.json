{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "date"],
    "properties": {
      "id": {
        "type": "object",
        "required": ["timestamp", "date"],
        "properties": {
          "timestamp": {
            "type": "integer"
          },
          "date": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "title": {
        "type": ["string", "null"]
      },
      "content": {
        "type": ["string", "null"]
      },
      "date": {
        "type": "string"
      },
      "sentiment": {
        "type": ["string", "null"]
      }
    },
    "additionalProperties": false
  }
}
